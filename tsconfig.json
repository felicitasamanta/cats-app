{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    /* Paths */
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@common/*": ["src/common/*"],
      "@common/assets/*": ["src/common/assets/*"],
      "@common/components/*": ["src/common/components/*"],
      "@common/hooks/*": ["src/common/hooks/*"],
      "@common/icons/*": ["src/common/icons/*"],
      "@common/styles/*": ["src/common/styles/*"],
      "@pages/cats/common/components/*": ["src/pages/cats/common/components/*"],
      "@pages/cats/common/hooks/*": ["src/pages/cats/common/hooks/*"],
      "@pages/cats/common/styles/*": ["src/pages/cats/common/styles/*"]
    }
  },
  "include": ["src", "e2e"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
